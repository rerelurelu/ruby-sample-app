<%= form_with(model: answer) do |form| %>
  <% if answer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(answer.errors.count, "error") %> prohibited this question from being saved:</h2>

      <ul>
        <% answer.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :question_id, {value: answer.question_id} %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_area :name, class:"form-control"%>
  </div>

  <div class="form-group">
    <%= form.label :content %>
    <%= form.text_area :content, rows:2, class:"form-control"%>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
