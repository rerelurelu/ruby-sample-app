<p id="notice"><%= notice %></p>

<h1 class="display-4 text-primary">Question & Answers</h1>

<div class="jumpbotron p-4 mb-4">
  <h2 class="card-title">
    <%= @question.title %>
  </h2>
  <p class="card-text">
    <%= @question.content %>
  </p>
  <p class="blockquote-footer text-right">
    <%= @question.name %>
  </p>
  <div class="<%= @question.finished ? 'text-danger' : 'text-primary'%>">
    <%= @question.finished ? 'finished' : 'active' %>
  </div>
</div>

<% if @question.finished? == false %>
  <div class="card p-3 mb-4">
    <h3 class="h4 text-primary">Post answer</h3>
    <%= render 'form2', answer: @answer %>
  </div>
<% end %>

<h3 class="h4 text-primary">Questions</h3>

<ul class="list-group">
  <% if @question.answer.count == 0 %>
    <p class="answer">nothing yet</p>
  <% else %>
    <% @question.answer.reverse_each do |re| %>
    <li class="list-group-item">
      <%= re.content + '(' + re.name + ')' %>
    </li>
    <% end %>
  <% end %>
</ul>

<%= link_to 'Back', questions_path %>
