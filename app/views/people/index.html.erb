<h1 class="display-4 text-primary">People#index</h1>
<p><%= @msg %></p>
<table class="table">
  <tr>
    <th>Id</th>
    <th>Name</th>
    <th></th>
  </tr>
  <% @data.each do |obj| %>
  <tr>
    <td><%= obj.id %></td>
    <td><a href="/people/<%= obj.id %>"><%= obj.name %></a></td>
    <td>
      <a href="/people/edit/<%= obj.id %>">Edit</a>&nbsp;&nbsp;
      <a href="javascript:delData(<%= obj.id %>)">Delete</a>
    </td>
  </tr>
  <% end %>
</table>
<script type="text/javascript" charset="utf-8">
  function delData(num) {
      if (confirm('Are you sirius?')) {
          document.location = "/people/delete/" + num;
      }
      return false;
  }
</script>
